  <module name="Fortran CPPC functions">

    <function name="CPPC_INIT_CONFIGURATION">
      <output parameters="1"/>
    </function>

    <function name="CPPC_INIT_STATE"/>

    <function name="CPPCF_OPEN">
      <input parameters="1,3"/> 
      <output parameters="2"/> <!-- Actually paramenter 2 is input-output, but at
