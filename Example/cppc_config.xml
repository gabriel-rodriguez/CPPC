<?xml version="1.0" encoding="ISO-8859-1"?>

<cppc>
  <module name="Controller">
    <parameter name="RootDir" value="/tmp/CPPC_Files"/>
    <parameter name="ApplicationName" value="gauss"/>
    <parameter name="Restart" value="false"/>
    <parameter name="Frequency" value="100"/>
    <parameter name="FullFrequency" value="5"/>
    <parameter name="CheckpointOnFirstTouch" value="true"/>
    <parameter name="Suffix" value=".cppc"/>
    <parameter name="StoredRecoverySets" value="5"/>
    <parameter name="DeleteCheckpoints" value="false"/>
  </module>

  <module name="Writer">
    <parameter name="Type" value="3"/>
    <module name="HDF-5">
      <parameter name="Compression" value="None"/>
      <parameter name="CompressionLevel" value="4"/>
      <parameter name="MinimumSize" value="100"/>
    </module>
  </module>
</cppc>
